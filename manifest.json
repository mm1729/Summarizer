{
    "manifest_version" : 2,

    "name" : "Summarizer",
    "description" : "Summarizes news articles for ready digest",
    "version" : "1.0",

    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },

    "permissions" : [
        "tabs",
        "https://ajax.googleapis.com/",
        "storage"
    ],

    "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["thirdParty/jquery-2.2.1.min.js", "extractor.js"]
    }
  ]
}
